@model IPGManager.Models.Funcionario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayFor(model => model.Nome)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Contacto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class = "col-sm-2">
            Género:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero.GeneroTipo)
        </dd>
        <dt class = "col-sm-2">
            Cargo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo.NomeCargo)
        </dd>
    </dl>
</div>
<div>
    <a class="button button3" asp-action="Edit" asp-route-id="@Model.CargoId">Edit</a> |
    <a class="button button2" asp-action="Index">Voltar</a>
</div>
