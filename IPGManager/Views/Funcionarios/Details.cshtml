@model IPGManager.Models.Funcionario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Contacto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class = "col-sm-2">
            Género:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class = "col-sm-2">
            Cargo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Horário
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Horario.HInicio)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FuncionarioId">Editar</a> |
    <a asp-action="Index">Voltar à Lista</a>
</div>
