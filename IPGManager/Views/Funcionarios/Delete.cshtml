@model IPGManager.Models.Funcionario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Quer apagar a informação deste funcionário?</h3>
<hr />
<div>

    <dl class="row">
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Contacto:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            Género:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero.GeneroTipo)
        </dd>
        <dt class="col-sm-2">
            Cargo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.NomeCargo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FuncionarioId" />

        </button>
        | <a class="button button2" asp-action="Index">Voltar&nbsp;<i class="fas fa-chevron-left"></i></a>


        <span id="confirmDeleteSpan_" style="display:none">
            <span>Tem a certeza que pretende Apagar?</span>
            <button type="submit" class="button button1">Sim&nbsp;<i class="fa fa-trash"></i></button>
            <a href="#" class="button button3"
               onclick="confirmDelete(false)">Não</a>
        </span>

        <span id="deleteSpan_">
            <a href="#" class="button button1"
               onclick="confirmDelete( true)">Apagar&nbsp;<i class="fa fa-trash"></i></a>
        </span>
    </form>
</div>
@section Scripts{

    <script src="~/js/CustomScript.js"></script>

}