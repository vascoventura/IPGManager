<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <title>IPGManagement</title>
    <meta charset="UTF-8">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/logo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/site2.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/solid.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="content">
        <header>
            <div class="main">
                <div class="logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png"></a>
                </div>
                <ul>
                    @if (User.IsInRole("manager") || User.IsInRole("admin"))
                    {
                        <li>
                            <div class="dropdown">
                                <button class="dropbtn">ADICIONAR</button>
                                <div class="dropdown-content">
                                    <a class="dropdown-item" asp-area="" asp-controller="Tarefas" asp-action="Create">TAREFAS</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Departamentos" asp-action="Create">DEPARTAMENTOS</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Cargos" asp-action="Create">CARGOS</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Funcionarios" asp-action="Create">FUNCIONÁRIOS</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Professores" asp-action="Create">PROFESSORES </a>
                                </div>
                            </div>
                        </li>
                    }
                    else
                    {

                    }
                    <li>
                        <div class="dropdown">
                            <button class="dropbtn">DETALHES</button>
                            <div class="dropdown-content">
                                <a class="dropdown-item" asp-area="" asp-controller="Tarefas" asp-action="Index">TAREFAS</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Departamentos" asp-action="Index">DEPARTAMENTOS</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Cargos" asp-action="Index">CARGOS</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Funcionarios" asp-action="Index">FUNCIONÁRIOS</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Professores" asp-action="Index">PROFESSORES</a>
                            </div>
                        </div>
                    </li>
                    <li>@Html.Partial("_LoginPartial")</li>


                </ul>
            </div>
        </header>



        <div class="container">
            <main role="main" class="pb-3">

                @RenderBody()
            </main>
        </div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align:center">
            &copy; 2019 - IPGManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

