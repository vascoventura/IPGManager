@model IPGManager.Models.Tarefa

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeTarefa)
        </dd>
        <dt class = "col-sm-2">
            Descrição:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoTarefa)
        </dd>
        <dt class = "col-sm-2">
            Data Predefinida:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataTarefa)
        </dd>
        <dt class = "col-sm-2">
            Cargo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo.NomeCargo)
        </dd>
    </dl>
</div>
<div>
    <a class="button button3" asp-action="Edit" asp-route-id="@Model.TarefaId">Editar&nbsp;<i class="fas fa-edit"></i>  </a> |
    <a class="button button2" asp-action="Index">Voltar&nbsp;<i class="fas fa-chevron-left"></i></a>
</div>
