@using X.PagedList.Mvc.Core

@model PaginatedList<IPGManager.Models.Tarefa>

@{
    ViewData["Title"] = "Index";
}

<h1>Tarefas</h1>
@if (User.IsInRole("manager") || User.IsInRole("admin"))
{
    <p>
        <a class="button button3" asp-action="Create">Criar Novo</a>
    </p>
}
else
{
}
@using (Html.BeginForm())
{
    <p>
        <input type="text" name="SearchString" placeholder="Procure por nome" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="button button1" />
        <a class="button button2" asp-action="Index">Voltar</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Nome da Tarefa
            </th>
            <th>
                Descrição da Tarefa
            </th>
            <th>
                Data
            </th>
            <th>
                Cargo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeTarefa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoTarefa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataTarefa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo.NomeCargo)
                </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a class="button button3" asp-action="Edit" asp-route-id="@item.TarefaId">Editar</a> |
                        <a class="button button2" asp-action="Details" asp-route-id="@item.TarefaId">Detalhes</a> |
                        <a class="button button1" asp-action="Delete" asp-route-id="@item.TarefaId">Apagar</a>
                    </td>
                }
                else { }
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="buttonprevious @prevDisabled" style="vertical-align:middle">
    <span>
        <i class="fas fa-backward"></i>&nbsp;Previous
    </span>
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="buttonnext @nextDisabled" style="vertical-align:middle">
    <span>
        Next&nbsp;<i class="fas fa-forward"></i>
    </span>
</a>
