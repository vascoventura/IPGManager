@model IPGManager.Models.TFC


@{
    ViewData["Title"] = "CascadingDropDownList";
}




    <h4>TFC</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CargoID" class="control-label">Nome Cargo</label>
                    <select id="cargo" asp-for="CargoID" class="form-control" asp-items="ViewBag.CargoID" onchange="myFunction()"></select>
                    <p id="demo"></p>
                </div>
                    <div class="form-group">
                        <label asp-for="FuncionarioId" class="control-label">Nome funcionário</label>
                        <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="TarefaId" class="control-label">Tarefa</label>
                        <select asp-for="TarefaId" class="form-control" asp-items="ViewBag.TarefaId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
        </form>
        </div>
    </div>

    
    <script>
        function myFunction() {
            var x = document.getElementById("cargo").value;
            document.getElementById("demo").innerHTML = "You selected: " + x;
        }
    </script>