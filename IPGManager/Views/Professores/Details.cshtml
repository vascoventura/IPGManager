@model IPGManager.Models.Professor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Professor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome

        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Pnome)
        </dd>
        <dt class="col-sm-2">
            Apelido

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unome)
        </dd>
        <dt class="col-sm-2">
            Contacto

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            Género

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.genero)
        </dd>
        <dt class="col-sm-2">
            Departamento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartamentoId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProfessorId">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
