@model IPGManager.Models.Professor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Professor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome

        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Nome)
        </dd>
        
        <dt class="col-sm-2">
            Contacto

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            Género

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero.GeneroTipo)
        </dd>
        <dt class="col-sm-2">
            Departamento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departamento.NomeDepartamento)
        </dd>
    </dl>
</div>
<div>
    <a class="button button3" asp-action="Edit" asp-route-id="@Model.ProfessorId">Editar&nbsp;<i class="fas fa-edit"></i>  </a> |
    <a class="button button2" asp-action="Index">Voltar&nbsp;<i class="fas fa-chevron-left"></i></a>
</div>
