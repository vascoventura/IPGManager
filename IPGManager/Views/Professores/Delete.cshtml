@model IPGManager.Models.Professor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Quer apagar a informação deste Professor?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome

        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Pnome)
        </dd>
        <dt class="col-sm-2">
            Apelido

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unome)
        </dd>
        <dt class="col-sm-2">
            Contacto

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            Género

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            Departamento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartamentoId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProfessorId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
