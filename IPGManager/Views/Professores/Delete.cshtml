@model IPGManager.Models.Professor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Quer apagar a informação deste professor?</h3>
<hr />
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome

        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            Contacto

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            Género

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero.GeneroTipo)
        </dd>
        <dt class="col-sm-2">
            Departamento

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departamento.NomeDepartamento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProfessorId" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('QDeseja mesmo apagar @Html.DisplayFor(model => model.Nome)?')">
            Apagar&nbsp;<i class="fa fa-trash"></i>
        </button>
        | <a class="button button2" asp-action="Index">Voltar&nbsp;<i class="fas fa-chevron-left"></i></a>
    </form>
</div>
