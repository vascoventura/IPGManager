@model IPGManager.Models.Cargo

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem a certeza que quer apagar?</h3>
<div>
    <h4>Cargo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NivelCargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NivelCargo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CargoId" />
        <button type="submit" class="button button1" onclick="return confirm('Deseja mesmo apagar @Html.DisplayFor(model => model.NomeCargo)?')">Apagar&nbsp;<i class="fa fa-trash"></i></button> 
        | <a class="button button2" asp-action="Index">Voltar&nbsp;<i class="fas fa-chevron-left"></i></a>
    </form>
</div>
