@model IPGManager.Models.Cargo

@{
    ViewData["Title"] = "Create";
}

<h1>Criar novo cargo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCargo" class="control-label">Nome do Cargo</label>
                <input asp-for="NomeCargo" class="form-control" />
                <span asp-validation-for="NomeCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição do cargo</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelCargo" class="control-label">Nível do Cargo</label>
                <input asp-for="NivelCargo" class="form-control" />
                <span asp-validation-for="NivelCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="button button1">
                    Criar&nbsp;<i class="fas fa-plus-square"></i></button> | <a class="button button2" asp-action="Index">Voltar&nbsp;<i class="fas fa-chevron-left"></i></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
